# Production Environment Configuration
NODE_ENV=production
PORT=3001

# API Configuration (Update these for your production deployment)
API_BASE_URL=https://your-domain.com/api
SERVER_BASE_URL=https://your-domain.com

# Frontend Configuration
VITE_API_BASE_URL=https://your-domain.com/api
VITE_SERVER_BASE_URL=https://your-domain.com

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Link Configuration
LINK_EXPIRY_HOURS=168

# Database (for production use)
# DATABASE_URL=postgresql://user:password@localhost:5432/qrgen
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_HTTPS_REDIRECT=true
