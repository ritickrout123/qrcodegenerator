# Staging Environment Configuration
NODE_ENV=staging
PORT=3001

# API Configuration
API_BASE_URL=https://staging-api.your-domain.com/api
SERVER_BASE_URL=https://staging-api.your-domain.com

# Frontend Configuration
VITE_API_BASE_URL=https://staging-api.your-domain.com/api
VITE_SERVER_BASE_URL=https://staging-api.your-domain.com

# CORS Configuration
CORS_ORIGIN=https://staging.your-domain.com

# Security
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=100

# Link Configuration
LINK_EXPIRY_HOURS=72

# Database (staging)
# DATABASE_URL=postgresql://user:password@staging-db:5432/qrgen_staging
# REDIS_URL=redis://staging-redis:6379

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_HTTPS_REDIRECT=false
